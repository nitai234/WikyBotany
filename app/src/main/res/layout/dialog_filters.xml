<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="570dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#7750FBD9">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מסננים"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="זמן שתילה"
                android:textColor="#000000"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/RGpickTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Pick0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="כל השנה" />

                <RadioButton
                    android:id="@+id/Pick1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="סתיו" />

                <RadioButton
                    android:id="@+id/Pick2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="חורף" />

                <RadioButton
                    android:id="@+id/Pick3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="אביב" />

                <RadioButton
                    android:id="@+id/Pick4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="קיץ" />

            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="זמן קטיף"
                android:textColor="#000000"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/RGplntTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Plant0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="כל השנה" />

                <RadioButton
                    android:id="@+id/Plant1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="סתיו" />

                <RadioButton
                    android:id="@+id/Plant2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="חורף" />

                <RadioButton
                    android:id="@+id/Plant3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="אביב" />

                <RadioButton
                    android:id="@+id/Plant4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="קיץ" />

            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="רמת קושי"
                android:textColor="#000000"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/RGdifficult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/difficult1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="קל" />

                <RadioButton
                    android:id="@+id/difficult2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="בינוני" />

                <RadioButton
                    android:id="@+id/difficult3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="קשה" />

            </RadioGroup>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="גובה (בס''מ)"
                android:textSize="20sp"
                android:textColor="#000000"/>

           <EditText
               android:layout_width="70dp"
               android:layout_height="50dp"
               android:id="@+id/ETDhighMin"
               android:hint="מ-"
               android:inputType="number"
               />

            <EditText
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:id="@+id/ETDhighMax"
                android:hint="עד-"
                android:inputType="number"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="כמות מים"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RGwater">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Water1"
                    android:text="קצת" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Water2"
                    android:text="בינוני"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Water3"
                    android:text="הרבה"/>

            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="כמות אור"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RGlight">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Light1"
                    android:text="קצת"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Light2"
                    android:text="בינוני"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Light3"
                    android:text="הרבה"/>

            </RadioGroup>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/BTDsearch"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:backgroundTint="#939393"
            android:text="חפש"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/BTDback"
            android:layout_gravity="center"
            android:backgroundTint="#939393"
            android:text="סגור ואפס"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
</LinearLayout>